<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/private_transport_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:text="@string/label_privtrans_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_column="1" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_short"
            android:id="@+id/company"
            android:layout_column="2"/>
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:text="@string/label_privtrans_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_column="1" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_short"
            android:id="@+id/departure"
            android:layout_column="2"/>
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:text="@string/label_privtrans_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_column="1" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_short"
            android:id="@+id/arrival"
            android:layout_column="2"/>
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:text="@string/label_privtrans_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_column="1" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:autoLink="phone"
            android:text="@string/placeholder_short" />
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:text="@string/label_privtrans_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_column="1" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_medium"
            android:id="@+id/reference"
            android:layout_column="2"/>
    </TableRow>


</TableLayout>